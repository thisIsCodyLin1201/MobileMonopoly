<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/rootLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#F5F5DC">

    <!-- 固定背景圖 (remains unchanged) -->
    <ImageView
        android:id="@+id/fixedBackground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:alpha="0.5"
        android:scaleType="fitCenter"
        android:src="@drawable/background"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 中間顯示的圖片 (remains unchanged) -->
    <ImageView
        android:id="@+id/mainImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/gridTop"
        app:layout_constraintBottom_toTopOf="@id/gridBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"/>

    <!-- 打卡按鈕 (remains unchanged) -->
    <Button
        android:id="@+id/checkButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="打卡"
        android:background="#FFCC80"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/mainImage"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="16dp"/>

    <!-- 上方格子 - 調整為4個格子 -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridTop"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:columnCount="4"
        app:rowCount="1"
        app:useDefaultMargins="false"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15">

        <ImageButton
            android:id="@+id/button_station_9"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>

        <ImageButton
            android:id="@+id/button_station_8"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_7"
            android:layout_width="0dp"
            android:layout_height="match_parent"

            android:scaleType="centerCrop"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_6"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
    </androidx.gridlayout.widget.GridLayout>

    <!-- 左側格子 - 調整為4個格子，寬度增加 -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridLeft"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:columnCount="1"
        app:rowCount="4"
        app:useDefaultMargins="false"
        app:layout_constraintTop_toBottomOf="@id/gridTop"
        app:layout_constraintBottom_toTopOf="@id/gridBottom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintWidth_percent="0.22">

        <ImageButton
            android:id="@+id/button_station_10"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_11"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_12"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_13"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_14"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
    </androidx.gridlayout.widget.GridLayout>

    <!-- 右側格子 - 調整為4個格子，寬度增加 -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridRight"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:columnCount="1"
        app:rowCount="4"
        app:useDefaultMargins="false"
        app:layout_constraintTop_toBottomOf="@id/gridTop"
        app:layout_constraintBottom_toTopOf="@id/gridBottom"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintWidth_percent="0.22">

        <ImageButton
            android:id="@+id/button_station_5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:scaleType="centerCrop"
            app:layout_rowWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
    </androidx.gridlayout.widget.GridLayout>

    <!-- 下方格子 - 調整為4個格子 -->
    <androidx.gridlayout.widget.GridLayout
        android:id="@+id/gridBottom"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:columnCount="4"
        app:rowCount="1"
        app:useDefaultMargins="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHeight_percent="0.15">

        <ImageButton
            android:id="@+id/button_station_15"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_16"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_17"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
        <ImageButton
            android:id="@+id/button_station_18"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:scaleType="centerCrop"
            app:layout_columnWeight="1"
            android:background="@android:color/transparent"
            android:padding="4dp"
            android:layout_margin="4dp"
            android:foreground="#22000000"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:contentDescription="@null"
            android:importantForAccessibility="no"
            android:elevation="2dp"/>
    </androidx.gridlayout.widget.GridLayout>

    <!-- 其他元件也調整對應的位置和大小 -->
    <!-- 顯示題目 - 放在中間位置 -->
    <TextView
        android:id="@+id/aiDialog"
        android:layout_width="220dp"
        android:layout_height="wrap_content"
        android:text="說明欄"
        android:textSize="18sp"
        android:textColor="@android:color/black"
        android:background="@drawable/dialog_background"
        android:padding="12dp"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/gridTop"
        app:layout_constraintBottom_toTopOf="@id/gridBottom"
        app:layout_constraintStart_toEndOf="@id/gridLeft"
        app:layout_constraintEnd_toStartOf="@id/gridRight"/>

    <!-- 選擇題選項 -->
    <LinearLayout
        android:id="@+id/answerOptions"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/aiDialog"
        app:layout_constraintStart_toEndOf="@id/gridLeft"
        app:layout_constraintEnd_toStartOf="@id/gridRight">

        <Button
            android:id="@+id/optionA"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="選項 A"
            android:textColor="@android:color/black"
            android:padding="12dp"
            app:backgroundTint="@null"
            android:background="@drawable/option_background"/>

        <Button
            android:id="@+id/optionB"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="選項 B"
            android:textColor="@android:color/black"
            app:backgroundTint="@null"
            android:background="@drawable/option_background"
            android:padding="12dp"/>

        <Button
            android:id="@+id/optionC"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="選項 C"
            android:textColor="@android:color/black"
            app:backgroundTint="@null"
            android:background="@drawable/option_background"
            android:padding="12dp"/>

        <Button
            android:id="@+id/optionD"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="選項 D"
            android:textColor="@android:color/black"
            app:backgroundTint="@null"
            android:background="@drawable/option_background"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- 是/否 題目按鈕 -->
    <LinearLayout
        android:id="@+id/trueFalseLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/aiDialog"
        app:layout_constraintStart_toEndOf="@id/gridLeft"
        app:layout_constraintEnd_toStartOf="@id/gridRight">

        <Button
            android:id="@+id/trueButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="是"
            android:textColor="@android:color/black"
            app:backgroundTint="@null"
            android:background="@drawable/option_background"
            android:padding="12dp"/>
        <Button
            android:id="@+id/falseButton"
            android:layout_width="220dp"
            android:layout_height="wrap_content"
            android:text="否"
            android:textColor="@android:color/black"
            app:backgroundTint="@null"
            android:background="@drawable/option_background"
            android:padding="12dp"/>
    </LinearLayout>

    <!-- 答案反饋圖片 -->
    <ImageView
        android:id="@+id/answerFeedbackImage"
        android:layout_width="220dp"
        android:layout_height="220dp"
        android:scaleType="fitCenter"
        android:visibility="gone"
        app:layout_constraintTop_toBottomOf="@id/gridTop"
        app:layout_constraintStart_toEndOf="@id/gridLeft"
        app:layout_constraintEnd_toStartOf="@id/gridRight"
        android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>